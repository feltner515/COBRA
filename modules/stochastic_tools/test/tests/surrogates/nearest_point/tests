      prereq = nearest_point/train # Creates data files that this test uses
      detail = 'evaluating, '
    []
    [train_and_load]
      type = CSVDiff
      input = cartesian.i
      allow_test_objects = true
      csvdiff = 'cartesian_out_results_0002.csv'
      detail = 'training and loading, and '
    []
    [predictors]
      type = CSVDiff
