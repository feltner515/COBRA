      allow_test_objects = true
      cli_args = 'Outputs/file_base=evaluate_out'
      csvdiff = 'evaluate_out_results_0002.csv'
      detail = 'using explictly specified predictors.'
    []
  []
  [vector]
    type = JSONDiff
